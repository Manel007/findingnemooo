@model IEnumerable<AM.ApplicationCore.Domain.Fete>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="index">
    <fieldset>
        <legend> Recherche</legend>
        Saisir une date de fete :
        <input type="date" name="dateFete" />
        <input type="submit" value="Recherchez" />
    </fieldset>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NbInviteMax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbInviteMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salle.AdresseSalle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFete">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdFete">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdFete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
